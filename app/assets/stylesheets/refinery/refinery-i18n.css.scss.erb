.locales {
  vertical-align: middle;
  border: 0;
  font: 0/0 a;
  text-shadow: none;
  color: transparent;
  background-color: transparent;
}

<% icons_path = [Refinery::I18n::Engine.root, 'app', 'assets', 'images', 'refinery', 'icons', 'flags'] %>
<% Refinery::I18n.frontend_locales.each do |flag| %>
.flag-<%= flag %> {
  <% if File.exists?(File.join(icons_path, "#{flag}.png")) %>
  background-image: image-url('<%= "refinery/icons/flags/#{flag}.png" %>');
  <% else %>
  background-image: image-url('refinery/icons/flags/missing.png');
  <% end %>
}
<% end %>
